# vim: ft=gitconfig:
[user]
	name = Nolan Cooper
	email = nolancooper97@gmail.com
[core]
	editor = vim
	autocrlf = false
[color]
	ui = auto
[color "branch"]
	current = cyan
	local = yellow
	remote = red
[color "diff"]
	meta = yellow bold
	frag = cyan
	old = red
	new = green
	whitespace = white reverse
[color "status"]
	added = green
	changed = yellow
	untracked = red
	branch = cyan
[alias]
	amend = commit -a --amend
	cm = commit -m
	scm = commit -S -m
	br = branch
	ba = branch -a
	st = status
	co = checkout
	conf = config --global -e
	destroy = reset --hard HEAD
	up = pull --rebase
[push]
	default = simple
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	tool = vimdiff
[include]
	path = ~/.work-gitconfig
[pull]
	rebase = false
[init]
	defaultBranch = main
