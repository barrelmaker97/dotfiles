#!/bin/bash
set -euo pipefail

# Check for args
while getopts ":s" opt; do
	case ${opt} in
		s ) SILENT="true"
			;;
		\? ) echo "Usage: gitgc [-s]"
			exit 0
			;;
	esac
done

if [ ! "$SILENT" = true ]; then
	echo "Running 'git gc' for $1"
	cd "$1" && git gc --quiet
else
	cd "$2" && git gc --quiet
fi
